<% const statusColors = {
  active: { text: "text-emerald-500", dot: "bg-emerald-400" },
  inactive: { text: "text-rose-500", dot: "bg-rose-400" },
  unknown: { text: "text-amber-500", dot: "bg-amber-400" },
}; %>
<% const statusMeta = statusColors[status_state] || statusColors.unknown; %>
<div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
  <h2 class="text-2xl font-semibold"><%= name %></h2>
  <p class="text-sm text-slate-400">(NORAD ID: <%= satellite_id %>)</p>
</div>
<hr class="border-teal-300" />

<div
  class="mb-4 mt-3 flex items-center gap-3 rounded-lg border border-slate-700/60 bg-slate-900/40 px-3 py-2"
>
  <span
    class="inline-flex h-4 w-4 flex-shrink-0 items-center justify-center rounded-full <%= statusMeta.dot %>"
  >
    <span class="h-2 w-2 rounded-full bg-white/80"></span>
  </span>
  <div class="flex flex-col leading-tight text-sm">
    <span class="text-xs uppercase tracking-wide text-slate-400">Status</span>
    <span class="font-semibold <%= statusMeta.text %>">
      <%= status_label %>
    </span>
  </div>
</div>
<p>
  <strong>Speed:</strong>
  <span class="satellite_speed_visualizer">0.00km/h</span>
</p>
<p>
  <strong>Longitude:</strong> <span class="satellite_long_visualizer"></span>
</p>
<p><strong>Latitude:</strong> <span class="satellite_lat_visualizer"></span></p>
<p>
  <strong>Altitude:</strong>
  <span class="satellite_alt_visualizer"></span>
</p>
<p>
  <strong>Inclination:</strong>
  <%= inclination %>Â°
</p>
<p>
  <strong>Revolution Time:</strong>
  <%= revolution %> minutes
</p>
<p>
  <strong>Launch Date:</strong>
  <%= launch_date %>
</p>
<p>
  <strong>Launch Site:</strong>
  <%= launch_site %>
</p>
<p>
  <strong>Owner:</strong>
  <%= owner %>
</p>
<!-- <p>
  <strong>Status:</strong>
  <%= status %>
</p>
<p>
  <strong>Object Type:</strong>
  <%= object_type %>
</p> -->
<p>
  <strong>Description:</strong>
  <%= description %>
</p>

<div class="flex flex-col items-center space-y-4">
  <img
    src="<%= image_url || '' %>"
    alt="Satellite Image"
    class="satellite-image w-auto max-w-full h-auto max-h-[200px] object-contain"
    data-satnogs-image="<%= image_url || '' %>"
  />
</div>
